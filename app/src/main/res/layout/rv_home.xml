<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/rv_home_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="10dp"
    app:contentPadding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_id"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/main_nama_mobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:text="Nama Mobil"/>

        <TextView
            android:id="@+id/main_nama_pemesan"
            android:layout_below="@id/main_nama_mobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/roboto_regular"
            android:text="Nama Pemesan"/>

        <TextView
            android:id="@+id/main_status"
            android:layout_below="@id/main_nama_pemesan"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/roboto_regular"
            android:text="status"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>